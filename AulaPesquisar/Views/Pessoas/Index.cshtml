@model IEnumerable<AulaPesquisar.Pessoa>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="card">
    <div class="card-header">
        Pesquisa Pessoas
    </div>
    <div class="card-body">
        <form action="/Pessoas/Index" method="get">
            <div class="row">
               <a href="/Pessoas/Create" class="btn btn-dark m-1">
                   Novo
               </a>
               <select name="itembusca" class="form-control mr-2 ml-2 col-2">
                   <option value="Todos">All</option>
                   <option value="Nome">Por Nome</option>
                   <option value="Idade">Por Idade</option>
                   <option value="CPF">Por CPF</option>
                   <option value="RG">Por RG</option>
                   <option value="Sexo">Por Sexo</option>
               </select>
                <label class="col-2 m-1 mt-2">Digite sua busca</label>
                <input type="search" name="query" class="form-control col-4 m-1" />
                <button type="submit" class="btn btn-success col-2 ml-2">Pesquisar</button>
            </div>
        </form>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            
            <th>
               Nome
            </th>
            <th>
               Idade
            </th>
            <th>
              CPF
            </th>
            <th>
              RG
            </th>
            <th>
                Sexo
            </th>
            
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.idade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cpf)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.rg)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sexo)
            </td>
           
            <td>
                <a href="/Pessoas/Edit/@item.Id" class="btn btn-warning">
                    Editar Pessoa
                </a>
                <a href="/Pessoas/Delete/@item.Id" class="btn btn-danger">
                    Excluir Pessoa
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
